<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elke.healthh.Main"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/net">

    <!--   <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:src="@drawable/hlog"
            android:layout_weight="0.13"
           android:scaleType="center"
           android:layout_below="@+id/Welcome"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_marginTop="89dp" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:id="@+id/tv7"
        android:layout_weight="0.14"
        android:textAlignment="center"
        android:typeface="normal"
        android:textIsSelectable="false"
        android:textSize="34dp"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="normal"
        android:textSize="34dp"
        android:id="@+id/variable"
        android:layout_below="@+id/tv7"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bConnect"
        android:text="Connect Bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bResults"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bResults"
        android:text="Show results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW PROFILE"
        android:id="@+id/bProfile"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bResults"
        android:layout_alignEnd="@+id/bResults" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLogout"
        android:text="LOGOUT"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health@Home"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />


</RelativeLayout>
